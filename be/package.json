{
  "name": "nodejs-msa-be",
  "version": "0.0.1",
  "description": "Backend - NodeJS best practices in MSA",
  "author": {
    "name": "Son Bui",
    "email": "son.buithanh1@nashtechglobal.com"
  },
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rimraf coverage dist logs .eslintcache",
    "prebuild": "rimraf dist",
    "build": "yarn prebuild && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint --cache --color \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "yarn lint --fix",
    "test": "yarn test:cov && yarn test:e2e",
    "test:unit": "jest --config ./jest.config.ts --runInBand --detectOpenHandles",
    "test:watch": "yarn test:unit --watch",
    "test:cov": "yarn test:unit --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest.config.e2e.ts --runInBand --detectOpenHandles",
    "test:e2e:watch": "yarn test:e2e --watch"
  },
  "dependencies": {
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.4.0",
    "@nestjs/mapped-types": "1.2.2",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/swagger": "^6.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "nest-winston": "^1.9.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.4.2",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.16.3",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0"
  },
  "engines": {
    "node": "18",
    "yarn": "^3"
  },
  "packageManager": "yarn@3.5.0"
}
